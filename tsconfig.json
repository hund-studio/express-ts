{
	"compilerOptions": {
		// transpilation settings
		"lib": ["ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ESNext",

		// dev tools
		"sourceMap": true,

		// features configuration
		"esModuleInterop": true,
		"strict": true,
		"resolveJsonModule": true,

		// filesystem
		"baseUrl": "./",
		"paths": {}
	}
}
